<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlt_send_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.do_an_httt.truon_000.jobssocialnetwork.main.ActivitySendMessage">


    <TableRow
        android:id="@+id/tbrTopMenu"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/cyan_tabbar"
        android:weightSum="5">

        <ImageView
            android:id="@+id/imgvSendMessageBack"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="0.7"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.3"
            android:gravity="center_vertical"
            android:text="Soạn tin nhắn"
            android:textColor="#ffffff"
            android:textSize="35px"
            android:textStyle="bold" />

    </TableRow>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tbrTopMenu"
        android:padding="15dp">

        <TextView
            android:id="@+id/tvFromLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From:"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSenderMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tvFromLabel"
            android:singleLine="true"
            android:text="youremail@gmail.com"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvToLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tvFromLabel"
            android:layout_alignRight="@id/tvFromLabel"
            android:layout_below="@id/tvFromLabel"
            android:layout_marginTop="10dp"
            android:text="To:"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtSendMessageReceiver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvFromLabel"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tvToLabel"
            android:singleLine="true"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/imgvShowListCheckBoxFriend"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignBottom="@id/edtSendMessageReceiver"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/edtSendMessageReceiver"
            android:layout_marginRight="25dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/detail_cv" />

        <TextView
            android:id="@+id/tvTitleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tvFromLabel"
            android:layout_alignRight="@id/tvFromLabel"
            android:layout_below="@id/tvToLabel"
            android:layout_marginTop="15dp"
            android:text="Title:"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtTitleSendMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvToLabel"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/tvToLabel"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvContentLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tvFromLabel"
            android:layout_below="@id/tvTitleLabel"
            android:layout_marginTop="30dp"
            android:text="Content:"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtContentSendMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tvContentLabel"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btSendMessage"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Send" />
    </RelativeLayout>

</RelativeLayout>
