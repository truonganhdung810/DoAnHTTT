<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="#debb1e" />

    <ImageView
        android:id="@+id/imgvAvatarEmployee"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imgvAvatarEmployee"
        android:layout_alignTop="@id/imgvAvatarEmployee"
        android:layout_toRightOf="@id/imgvAvatarEmployee">

        <TextView
            android:id="@+id/tvNameEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="Truong Anh Dung"
            android:textColor="#ffffff"
            android:textSize="30px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEmailEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNameEmployee"
            android:singleLine="true"
            android:text="truonganhdung810@gmail.com"
            android:textColor="#ffffff"
            android:textSize="20px"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>