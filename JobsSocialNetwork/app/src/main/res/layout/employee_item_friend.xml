<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="5dp">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.do_an_httt.truon_000.jobssocialnetwork.view.RoundedImageView
                android:id="@+id/imgvAvatarFriend"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/avatar" />

            <TextView
                android:id="@+id/tvNameListFriends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="45dp"
                android:layout_toRightOf="@id/imgvAvatarFriend"
                android:singleLine="false"
                android:text="Trương Anh Dũng"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEmailListFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvNameListFriends"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="45dp"
                android:layout_toRightOf="@id/imgvAvatarFriend"
                android:singleLine="false"
                android:text="truonganhdung810@gmail.com"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/imgvAcceptFriend"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/tvNameListFriends"
                android:layout_marginRight="10dp"
                android:src="@mipmap/accept_friend" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>