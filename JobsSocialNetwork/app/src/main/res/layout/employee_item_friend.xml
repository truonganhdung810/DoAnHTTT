<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">


    <com.do_an_httt.truon_000.jobssocialnetwork.view.RoundedImageView
        android:id="@+id/imgvAvatarFriend"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/avatar" />

    <TextView
        android:id="@+id/tvNameListFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/imgvAvatarFriend"
        android:singleLine="false"
        android:text="Trương Anh Dũng"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvEmailListFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNameListFriends"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/imgvAvatarFriend"
        android:singleLine="false"
        android:text="truonganhdung810@gmail.com"
        android:textSize="12dp" />

</RelativeLayout>